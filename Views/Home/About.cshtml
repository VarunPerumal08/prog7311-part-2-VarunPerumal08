@{
    ViewData["Title"] = "About Us";
}

<div class="container py-5">
    <div class="row align-items-center">
        <div class="col-lg-6 mb-4 mb-lg-0">
            <img src="~/Solar.jpeg" alt="Farm with solar panels" class="img-fluid rounded shadow">
        </div>
        <div class="col-lg-6">
            <h1 class="display-4 mb-4 text-success">Our Story</h1>
            <p class="lead">Pioneering sustainable agriculture through renewable energy solutions</p>

            <div class="mt-4">
                <h3 class="h4">Our Mission</h3>
                <p>To bridge the gap between South Africa's agricultural sector and green energy providers, creating mutually beneficial partnerships that drive sustainable farming practices.</p>

                <h3 class="h4 mt-4">Our Vision</h3>
                <p>A future where every farm in South Africa operates on 100% renewable energy, reducing carbon emissions while increasing productivity.</p>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <h2 class="text-center mb-5">Meet Our Team</h2>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <img src="~/about1.jpg" class="card-img-top" alt="CEO">
                <div class="card-body">
                    <h5 class="card-title">Thabo Mbeki</h5>
                    <p class="text-muted">Founder & CEO</p>
                    <p class="card-text">Agricultural engineer with 15 years experience in sustainable farming solutions.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <img src="~/About2.jpg" class="card-img-top" alt="CTO">
                <div class="card-body">
                    <h5 class="card-title">Nomsa Khumalo</h5>
                    <p class="text-muted">Chief Technology Officer</p>
                    <p class="card-text">Renewable energy specialist focusing on rural applications.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <img src="~/About3.jpg" class="card-img-top" alt="Head of Partnerships">
                <div class="card-body">
                    <h5 class="card-title">James Petersen</h5>
                    <p class="text-muted">Head of Farmer Partnerships</p>
                    <p class="card-text">Connects farmers with the right energy solutions for their needs.</p>
                </div>
            </div>
        </div>
    </div>
</div>