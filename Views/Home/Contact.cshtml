@{
    ViewData["Title"] = "Contact Us";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-6 mb-5 mb-lg-0">
            <h1 class="display-4 mb-4 text-success">Get in Touch</h1>
            <p class="lead">We'd love to hear from you</p>

            <div class="mt-5">
                <div class="d-flex mb-4">
                    <div class="me-4 text-success">
                        <i class="fas fa-map-marker-alt fa-2x"></i>
                    </div>
                    <div>
                        <h5>Our Office</h5>
                        <p>123 Random Road<br>Unknown Province, 80085<br>South Africa</p>
                    </div>
                </div>

                <div class="d-flex mb-4">
                    <div class="me-4 text-success">
                        <i class="fas fa-phone-alt fa-2x"></i>
                    </div>
                    <div>
                        <h5>Call Us</h5>
                        <p>+27 21 123 4567<br>Mon-Fri, 8am-5pm</p>
                    </div>
                </div>

                <div class="d-flex">
                    <div class="me-4 text-success">
                        <i class="fas fa-envelope fa-2x"></i>
                    </div>
                    <div>
                        <h5>Email Us</h5>
                        <p>info@agrienergyconnect.co.za<br>support@agrienergyconnect.co.za</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <h3 class="card-title mb-4">Send Us a Message</h3>
                    <form>
                        <div class="mb-3">
                            <label for="name" class="form-label">Your Name</label>
                            <input type="text" class="form-control" id="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="subject" class="form-label">Subject</label>
                            <select class="form-select" id="subject">
                                <option>General Inquiry</option>
                                <option>Technical Support</option>
                                <option>Partnership Opportunity</option>
                                <option>Feedback</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Message</label>
                            <textarea class="form-control" id="message" rows="5" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-success px-4 py-2">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <div class="ratio ratio-16x9">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3310.715674546716!2d18.86021531521406!3d-33.93239498064278!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1dcdb2e9f94585e7%3A0x5c9d6b5d5d5d5d5d!2sStellenbosch!5e0!3m2!1sen!2sza!4v1620000000000!5m2!1sen!2sza"
                        width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </div>
</div>