@{
    ViewData["Title"] = "Home";
}

<div class="text-center mb-5">
    <!-- Logo -->
    <img src="~/Agri-Energy Connect.png" alt="Agri-Energy Connect Logo" class="mb-4" style="max-width: 300px; height: auto;">

    <!-- Company Description -->
    <div class="container px-5">
        <h1 class="display-4 mb-4">Welcome to Agri-Energy Connect</h1>
        <p class="lead mb-4">
            Bridging sustainable agriculture with renewable energy solutions for a greener future.
        </p>
        <div class="card shadow-sm p-4 mb-5 bg-light rounded">
            <p>
                Agri-Energy Connect is South Africa's premier platform connecting farmers with green energy technologies.
                We empower agricultural businesses to adopt sustainable practices through:
            </p>
            <ul class="list-unstyled text-start mx-auto" style="max-width: 600px;">
                <li class="mb-2">✔ Solar-powered irrigation systems</li>
                <li class="mb-2">✔ Wind energy solutions for farms</li>
                <li class="mb-2">✔ Bioenergy production from agricultural waste</li>
                <li class="mb-2">✔ Energy efficiency consulting</li>
            </ul>
            <p class="mt-3">
                Join our growing network of eco-conscious farmers and energy providers today!
            </p>
        </div>

        <!-- Call-to-action buttons -->
        <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
            <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg px-4 gap-3">
                Login to Your Account
            </a>
            <a href="#features" class="btn btn-outline-secondary btn-lg px-4">
                Learn More
            </a>
        </div>
    </div>
</div>

<!-- Features Section -->
<section id="features" class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Our Platform Features</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Sustainable Farming Hub</h5>
                        <p class="card-text">
                            Access best practices for organic farming, water conservation, and soil health management.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Green Energy Marketplace</h5>
                        <p class="card-text">
                            Discover and compare renewable energy solutions tailored for agricultural needs.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Project Collaboration</h5>
                        <p class="card-text">
                            Connect with experts and find funding for your sustainable agriculture projects.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>